
# /etc/network/interfaces

auto lo
iface lo inet loopback

# Ethernet: managed manually by /etc/init.d/S41eth (no automatic DHCP here)
auto eth0
iface eth0 inet manual
    metric 10

# WiFi: managed manually by /etc/init.d/S42wifi
auto wlan0
iface wlan0 inet manual
    wpa-conf /etc/wpa_supplicant.conf
    metric 50
